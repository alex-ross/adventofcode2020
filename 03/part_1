#!/usr/bin/env ruby

class Position
  attr_reader :x, :y
  def initialize(x, y)
    @x = x
    @y = y
  end

  def +(position)
    Position.new(x + position.x, y + position.y)
  end

  def inspect
    "#<Position #{x} #{y}>"
  end

  def to_s
    "#<Position #{x} #{y}>"
  end
end

position = Position.new(0, 0)
trees = 0

area = DATA.readlines.map(&:chomp).map { |l| l.split('') }

while position.y < area.count - 1
  position += Position.new(3, 1)
  row = area[position.y]
  trees += 1 if row[position.x % row.count] == '#'
end

puts "Trees: #{trees}"


__END__
